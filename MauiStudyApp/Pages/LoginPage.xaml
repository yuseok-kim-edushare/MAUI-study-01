<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStudyApp.Pages.LoginPage"
             Title="Login"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                Text="MAUI Study App"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White" />

            <Label
                Text="Please login to continue"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="White"
                Margin="0,0,0,30" />

            <Frame
                Padding="20"
                CornerRadius="10"
                BackgroundColor="White">
                <VerticalStackLayout Spacing="15">
                    
                    <Label
                        Text="User ID"
                        FontSize="14"
                        TextColor="Black" />
                    
                    <Entry
                        x:Name="UserIdEntry"
                        Placeholder="Enter your ID"
                        PlaceholderColor="Gray"
                        TextColor="Black" />

                    <Label
                        Text="Password"
                        FontSize="14"
                        TextColor="Black"
                        Margin="0,10,0,0" />
                    
                    <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Enter your password"
                        IsPassword="True"
                        PlaceholderColor="Gray"
                        TextColor="Black" />

                    <Button
                        x:Name="LoginButton"
                        Text="Login"
                        Clicked="OnLoginClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Margin="0,20,0,0"
                        HorizontalOptions="Fill" />

                    <Label
                        x:Name="StatusLabel"
                        Text=""
                        FontSize="12"
                        TextColor="Red"
                        HorizontalOptions="Center"
                        IsVisible="False" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
